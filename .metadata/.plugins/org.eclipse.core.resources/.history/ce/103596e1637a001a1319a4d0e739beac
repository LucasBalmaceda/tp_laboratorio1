#include <stdio.h>

//Funcion que se utiliza para comunicar las operaciones que realiza y guardar dicha funcion seleccionada
int tipoDeOperacion(void)
{
	int operando;
	printf("Ingrese la operacion que quiere realizar: \n 1=Sumar. \n 2=Restar \n 3=Multiplicar \n 4=Dividir \n 5=Factoriar primer numero \n 6=Factoriar segundo numero \n Presione cualquier boton para salir.\n");
	scanf("%d",&operando);
	return operando;
}
//Funcion que se utiliza para pedir un numero y guardarlo
float pedirNumero(void)
{
	float numero;

	printf("Ingrese un numero: ");
	scanf("%f",&numero);
	return numero;
}
//Suma los numeros pedidos
float sumar(float numero1, float numero2)
{
	float resultado;

	resultado = numero1+numero2;
	return resultado;
}
//resta los numeros pedidos
float resta(float numero1, float numero2)
{
	float resultado;

	resultado = numero1-numero2;
	return resultado;
}
//divide los numeros ya pedidios
float division(float numero1, float numero2)
{
	float resultado;
	if(numero1 == 0)
	{
		printf("ERROR, no se puede dividir por 0");
		return -1;
	}
	resultado = numero1/numero2;
	return resultado;

}
//multiplica los numeros pedidos
float multiplicacion(float numero1, float numero2){

	float resultado;

	resultado = numero1*numero2;
	return resultado;
}
//saca el factorial del primer numero pedido
float factorialA(float numero1)
{

	float resultado=1;
	int i;

	for(i=0;i<=numero1;i++)
	{
		resultado = resultado*i;
	}
	return resultado;
}
//saca el factorial del segundo numero pedido
float factorialB(float numero2)
{
	float resultado=1;
	int i;

	for(i=0;i<=numero2;i++)
	{
		resultado = resultado*1;
	}

	return resultado;
}
//se encarga de llamar a las funciones y darle a elegir al usuario el tipo de operacion que quiera realizar
float hacerCalculo(void)
{
	float numero1;
	float numero2;
	float respuesta;

	numero1 = pedirNumero();
	numero2 = pedirNumero();

	switch(tipoDeOperacion())
	{
	case 1:
		respuesta=sumar(numero1, numero2);

			break;

	case 2:
		respuesta=resta(numero1, numero2);
			break;

	case 3:
		respuesta=multiplicacion(numero1, numero2);
			break;

	case 4:
		respuesta=division(numero1, numero2);
			break;

	case 5:
		respuesta=factorialA(numero1);
			break;

	case 6:
		respuesta=factorialB(numero2);
			break;

	default: printf("Error, el tipo de operacion que quiere realizar no pertenece a ninguna de las funciones antes mostradas.");

	}

	return respuesta;
}
//Esta funcion es llamada por el main y se encarga de mostrar el resultado
int mostrarResultado(void)
{
	printf("El resultado es: %.2f",hacerCalculo());
	return 0;
}
