#include "funciones.h"
int calculadora(void)
{
	int ret = -1;
	int opcion;
	int num1;
	int num2;

	do
		{
		printf("Marque una opcion: \n1-Sumar: \n2-Restar: \n3-Dividir: \n4-Multiplicar: \n5-Factorial: \n6-Salir.");
			switch(opcion)
			{
			case 1:
				num1 = getInt();
				num2 = getInt();
				sumar(num1, num2);
				break;
			case 2:
				restar;
				break;
			case 3:
				division;
				break;
			case 4;
				multiplicacion;
				break;
			case 5;
				factorial;
				break;
			}
		}while(opcion != 6);

	return ret;
}


int sumar(int numero1,int numero2)
{
	int suma;

	suma = numero1 + numero2;

	return suma;
}

int restar(int numero1, int numero2)
{
	int resta;

	resta = numero1 + numero2;

	return resta;
}

int division(int * respuesta, int numero1, int numero2)
{
	int ret = -1;
	int division;

	if(numero1 != NULL && numero2 != NULL)
	{
		division = numero1 / numero2;
		*respuesta = division;
		ret = 0;
		printf("\nsalio bien");
	}

	else
	{
		printf("malio sal");
	}

	return ret;
}

int getInt(int * pResultado, char * mensaje, char * mensajeError, int minimo, int maximo , int reintentos)
{
	int ret = -1;
	int buffer;

	if(pResultado != NULL && mensaje != NULL && mensajeError != NULL && minimo <= maximo && reintentos >= 0)
	{
		do
		{
			printf("%s",mensaje);
			scanf("%d",&buffer);
			if(buffer >= minimo && buffer <= maximo)
			{
				*pResultado = buffer;
				ret = 0;
			}
			else
			{
			printf("%s",mensajeError);
			}
		}while(reintentos >= 0);

	}
	return ret;
}
